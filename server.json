{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.MattStellisoft/stellify-mcp",
  "description": "Build Laravel apps through conversation. Code stored as structured JSON for surgical AI edits.",
  "repository": {
    "url": "https://github.com/Stellify-Software-Ltd/stellify-mcp",
    "source": "github"
  },
  "version": "0.1.2",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@stellisoft/stellify-mcp",
      "version": "0.1.2",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Stellify API endpoint URL",
          "isRequired": true,
          "format": "string",
          "isSecret": false,
          "name": "STELLIFY_API_URL",
          "defaultValue": "https://api.stellisoft.com/v1"
        },
        {
          "description": "Your Stellify API token (get from stellisoft.com/settings/tokens)",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "STELLIFY_API_TOKEN"
        }
      ]
    }
  ]
}